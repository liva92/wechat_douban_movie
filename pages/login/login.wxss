.header {
    height: 300rpx;
    overflow: hidden;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 25%
}
.header image{
    width: 200rpx;
    height: 200rpx;

}

.loginPane {
    width: 500rpx;
    height: 500rpx;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    padding-top: 20rpx;
    font-size: 28rpx
}
.loginPane .fromitem {
    flex: 1;
    display: flex;
    margin: 28rpx 0;
}

.password,
.account {
    border-bottom: 1rpx solid;
    display: flex;
    margin-left: 20rpx;
}


.spaceBetween {
    justify-content: space-between;
    margin-top: 20rpx;
    margin-bottom: 20rpx;

}
.btn {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    border-radius: 40rpx;
}

/* 用户个人中心 */
.userinfoHeader{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: 400rpx;
    width: 100%;
    background-image: url(https://ss1.bdstatic.com/70cFv8Sh_Q1YnxGkpoWK1HF6hhy/it/u=1120706291,1972335012&fm=26&gp=0.jpg);
    background-size: cover;
    background-repeat: no-repeat;
    background-origin: 50rpx 50rpx;
    background-position: 70% 75%;
    color: #fff;
}
.userImage{
    width: 100rpx;
    height: 100rpx;
    border:2rpx solid #fff;
    border-radius: 50%;
    overflow: hidden;
    padding: 6rpx;

}
.userlogo{
    color: #ccc;
    width: 100rpx;
    height: 100rpx;
}